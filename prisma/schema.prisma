generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Location {
  binId     String   @id @default(dbgenerated("gen_random_uuid()")) // Use PostgreSQL's function to generate a UUID
  city      String
  apiUrl    String
  marker    String
  latitude  Float
  longitude Float
  createdAt DateTime @default(now())
}

model Appointment {
  id            Int       @id @default(autoincrement())
  location      String
  type          String
  description   String
  date          DateTime? @default(now())
  paymentStatus String    @default("pending")
}

model WastePickup {
  id            Int       @id @default(autoincrement())
  apid          Int
  location      String
  type          String
  description   String
  date          DateTime? @default(now())
  driver  	String
  Status  	String
	
}

model Payment {
  id          Int      @id @default(autoincrement())
  cardNumber  String
  cvc         String
  expDate     DateTime
  ownerName   String
  balance     Int
  history     String
  createdAt   DateTime @default(now())
}

model Feedback {
  id            Int       @id @default(autoincrement())
  aid          Int
  location      String
  type          String
  date          DateTime? @default(now())
  driver  	String
  Feedback  	String
	
}